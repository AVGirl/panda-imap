COPY=copy
CD=cd
MAKE=nmake /nologo /f makefile.w2k
MKDIR=mkdir
RD=rmdir /s /q


# Make the IMAP Toolkit

build:	c-client mtest mailutil imapd ipopd
	$(CD) c-client
	$(MAKE)
	$(CD) ..\mtest
	$(MAKE)
	$(CD) ..\mailutil
	$(MAKE)
	$(CD) ..\ipopd
	$(MAKE)
	$(CD) ..\imapd
	$(MAKE)
	$(CD) ..

c-client:
	$(MKDIR) c-client
	$(COPY) src\c-client\*.* c-client
	$(COPY) src\charset\*.* c-client
	$(COPY) src\osdep\nt\*.* c-client

mtest:
	$(MKDIR) mtest
	$(COPY) src\mtest\*.* mtest

mailutil:
	$(MKDIR) mailutil
	$(COPY) src\mailutil\*.* mailutil

ipopd:
	$(MKDIR) ipopd
	$(COPY) src\ipopd\*.* ipopd

imapd:
	$(MKDIR) imapd
	$(COPY) src\imapd\*.* imapd

clean:
	$(RD) c-client mtest mailutil ipopd imapd

# A monument to a hack of long ago and far away...
love:
	@@echo 'not war?'
@


